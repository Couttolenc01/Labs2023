<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('partials/head'); -%>
</head>
<body class="container">
    <%- include('partials/header'); -%>

    <% if (entries.length) { %>
        <% entries.forEach(function(entry) { %>
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <%= entry.title %>
                    <div class="float-end">
                        <%= entry.published %>
                    </div>
                </div>
                <div class="card-body">
                    <%= entry.content %>
                </div>
                <% if (!entry.imagen) { %>
                    <br>
                <% } else { %> 
                    <img src="/uploads/<%= entry.imagen %>" alt="imagen">
                <% } %>
            </div>
        <% }); %>
    <% } else { %>
        <h1>No existen entradas</h1>
    <% } %>
    
     
            
        
   
   
</body>
</html>